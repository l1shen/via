{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
	"esModuleInterop": true,
	"moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "compileOnSave": false,
  "includes": [
    "app/**/*",
    "configs/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
